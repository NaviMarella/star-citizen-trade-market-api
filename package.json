{
	"name": "star-citizen-trade-market-api",
	"version": "0.1.0",
	"description": "Star Citizen Trade Market Backend API",
	"author": {
		"email": "chrissi92@hotmail.de",
		"name": "Christopher Quadflieg"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "tsc --skipLibCheck",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "ts-node --transpile-only -r tsconfig-paths/register src/main.ts",
		"start:dev": "nodemon",
		"start:debug": "nodemon --config nodemon-debug.json",
		"prestart:prod": "rimraf dist && tsc --skipLibCheck",
		"start:prod": "node dist/main.js",
		"migrate": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "~6.0.2",
		"@nestjs/core": "~6.0.2",
		"@nestjs/graphql": "~6.0.2",
		"@nestjs/jwt": "~6.0.0",
		"@nestjs/passport": "~6.0.0",
		"@nestjs/platform-express": "~6.0.2",
		"ansi-regex": "~4.1.0",
		"apollo-server-express": "~2.4.8",
		"bcrypt": "~3.0.5",
		"class-transformer": "~0.2.0",
		"class-validator": "~0.9.1",
		"dotenv": "~7.0.0",
		"graphql": "~14.1.1",
		"graphql-tools": "~4.0.4",
		"jest-haste-map": "~24.5.0",
		"jest-resolve": "~24.5.0",
		"nest-access-control": "~1.0.0",
		"node-pg-migrate": "~3.18.1",
		"nodemailer": "~5.1.1",
		"passport": "~0.4.0",
		"passport-jwt": "~4.0.0",
		"pg": "~7.9.0",
		"pg-camelcase": "~0.0.3",
		"postgres-array": "~2.0.0",
		"reflect-metadata": "~0.1.13",
		"rimraf": "~2.6.3",
		"rxjs": "~6.4.0"
	},
	"devDependencies": {
		"@nestjs/testing": "~6.0.2",
		"@types/bcrypt": "~3.0.0",
		"@types/dotenv": "~6.1.0",
		"@types/express": "~4.16.1",
		"@types/graphql": "~14.0.7",
		"@types/jest": "~24.0.11",
		"@types/node": "~11.11.4",
		"@types/nodemailer": "~4.6.6",
		"@types/passport-jwt": "~3.0.1",
		"@types/supertest": "~2.0.7",
		"jest": "~24.5.0",
		"nodemon": "~1.18.10",
		"prettier": "~1.16.4",
		"supertest": "~4.0.2",
		"ts-jest": "~24.0.0",
		"ts-loader": "~5.3.3",
		"ts-node": "~8.0.3",
		"tsconfig-paths": "~3.8.0",
		"tslint": "~5.14.0",
		"tslint-eslint-rules": "~5.4.0",
		"typescript": "~3.3.4000",
		"typescript-tslint-plugin": "~0.3.1"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"~.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
