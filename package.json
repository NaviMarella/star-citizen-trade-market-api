{
	"name": "star-citizen-trade-market-api",
	"version": "0.1.0",
	"description": "Star Citizen Trade Market Backend API",
	"author": {
		"email": "chrissi92@hotmail.de",
		"name": "Christopher Quadflieg"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "tsc --skipLibCheck",
		"format": "prettier --write 'src/**/*.ts'",
		"start": "ts-node --transpile-only -r tsconfig-paths/register src/main.ts",
		"start:dev": "nodemon",
		"start:debug": "nodemon --config nodemon-debug.json",
		"prestart:prod": "rimraf dist && tsc --skipLibCheck",
		"start:prod": "node dist/main.js",
		"migrate": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "~6.8.5",
		"@nestjs/core": "~6.8.5",
		"@nestjs/graphql": "~6.5.3",
		"@nestjs/jwt": "~6.1.1",
		"@nestjs/passport": "~6.1.0",
		"@nestjs/platform-express": "~6.8.5",
		"ansi-regex": "~5.0.0",
		"apollo-server-express": "~2.9.7",
		"bcrypt": "~3.0.6",
		"class-transformer": "~0.2.3",
		"class-validator": "~0.10.2",
		"dotenv": "~8.2.0",
		"graphql": "~14.5.8",
		"graphql-tools": "~4.0.6",
		"jest-haste-map": "~24.9.0",
		"jest-resolve": "~24.9.0",
		"nest-access-control": "~2.0.1",
		"node-pg-migrate": "~3.23.3",
		"nodemailer": "~6.3.1",
		"passport": "~0.4.0",
		"passport-jwt": "~4.0.0",
		"pg": "~7.12.1",
		"pg-camelcase": "~0.0.3",
		"postgres-array": "~2.0.0",
		"reflect-metadata": "~0.1.13",
		"rimraf": "~3.0.0",
		"rxjs": "~6.5.3"
	},
	"devDependencies": {
		"@nestjs/testing": "~6.8.5",
		"@types/bcrypt": "~3.0.0",
		"@types/express": "~4.17.1",
		"@types/graphql": "~14.5.0",
		"@types/jest": "~24.0.21",
		"@types/node": "~12.12.0",
		"@types/nodemailer": "~6.2.2",
		"@types/passport-jwt": "~3.0.2",
		"@types/supertest": "~2.0.8",
		"jest": "~24.9.0",
		"nodemon": "~1.19.4",
		"prettier": "1.18.2",
		"supertest": "~4.0.2",
		"ts-jest": "~24.1.0",
		"ts-loader": "~6.2.1",
		"ts-node": "~8.4.1",
		"tsconfig-paths": "~3.9.0",
		"tslint": "~5.20.0",
		"tslint-eslint-rules": "~5.4.0",
		"typescript": "~3.6.4",
		"typescript-tslint-plugin": "~0.5.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"~.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
