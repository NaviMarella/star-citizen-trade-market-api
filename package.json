{
	"name": "star-citizen-trade-market-api",
	"version": "0.1.0",
	"description": "Star Citizen Trade Market Backend API",
	"author": {
		"email": "chrissi92@hotmail.de",
		"name": "Christopher Quadflieg"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "nodemon",
		"start:debug": "nodemon --config nodemon-debug.json",
		"prestart:prod": "rimraf dist && tsc",
		"start:prod": "node dist/main.js",
		"migrate": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "~5.4.1",
		"@nestjs/core": "~5.4.1",
		"@nestjs/graphql": "~5.4.0",
		"ansi-regex": "~4.0.0",
		"apollo-server-express": "~2.2.5",
		"class-transformer": "~0.2.0",
		"class-validator": "~0.9.1",
		"dotenv": "~6.1.0",
		"graphql": "~14.0.2",
		"graphql-tools": "~4.0.3",
		"nest-access-control": "~1.0.0",
		"node-pg-migrate": "~3.14.1",
		"pg": "~7.7.1",
		"pg-camelcase": "~0.0.3",
		"postgres-array": "~2.0.0",
		"reflect-metadata": "~0.1.12",
		"rimraf": "~2.6.2",
		"rxjs": "~6.3.3"
	},
	"devDependencies": {
		"@nestjs/testing": "~5.4.1",
		"@types/dotenv": "~6.1.0",
		"@types/express": "~4.16.0",
		"@types/graphql": "~14.0.3",
		"@types/jest": "~23.3.10",
		"@types/node": "~10.12.11",
		"@types/supertest": "~2.0.6",
		"jest": "~23.6.0",
		"nodemon": "~1.18.7",
		"prettier": "~1.15.3",
		"supertest": "~3.3.0",
		"ts-jest": "~23.10.5",
		"ts-loader": "~5.3.1",
		"ts-node": "~7.0.1",
		"tsconfig-paths": "~3.7.0",
		"tslint": "~5.11.0",
		"tslint-eslint-rules": "~5.4.0",
		"typescript": "~3.2.1",
		"typescript-tslint-plugin": "~0.1.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"~.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
